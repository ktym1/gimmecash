<% @projects.each do |project| %>

<ul>

	<li> <%= link_to project.title, project_path(project.id) %> </li>
	<li> Description: <%= project.description %> </li>
	<li> Goal: <%= number_to_currency(project.goal, precision: 2) %> </li>
	<li> Start Date: <%= project.start_date %> </li>
	<li> End Date: <%= project.end_date %> </li>
	<li> Status: <%= project.active %> </li>
</ul>

<% end %>

